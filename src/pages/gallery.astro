---
import Layout from "../layouts/Layout.astro";
import { galleryPageContent } from "../config";
import GalleryCard from "../components/GalleryCard.astro";
---

<Layout seo={galleryPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">Gallery</h1>
    <p class="opacity-60 mb-10">{galleryPageContent.subtitle}</p>
    <div class="flex flex-col sm:flex-wrap sm:flex-row space-between gap-3 sm:py-5 py-10">
      {galleryPageContent.photos.map((Photo) => <GalleryCard {...Photo} />)}
    </div>
  </section>
</Layout>
