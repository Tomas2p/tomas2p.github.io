---
import { Image } from "astro:assets";
import type { Photo } from "../types/config";

type Props = Photo;

const { title, image, year, collection } = Astro.props;
---

<div
  class="relative bg-gray-700 rounded-lg aspect-video sm:w-[200px] sm:h-[200px]"
>
  <Image
    width={1920}
    height={1080}
    src={image}
    alt={""}
    class="w-full h-full object-cover border-2 border-gray-700 rounded-lg aspect-video"
  />
  <div
    class="absolute inset-0 flex flex-col gap-2 items-center justify-center bg-opacity-65 transition-opacity duration-300 ease-in-out bg-black bg-opacity-50 hover:opacity-0"
  >
    <h2 class="text-white text-2xl">{title}</h2>
    <p class="text-gray-300 text-lg"># {collection}</p>
    <span class="opacity-60">- {year} -</span>
  </div>
</div>
